<%- include("header") -%>

<div class="center">
  <div class="box" id="heading">
    <h1><%= title %> </h1>
  </div>

  <div class="box">

      <% newlistitems.forEach(function(fruit){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%= fruit._id %>" onchange="this.form.submit()">
              <p> <%= fruit.name %> </p>
          </div>
          <input type="hidden" name="listname" value="<%= title %>">
        </form>
      <% }); %>


      <form class="item" action="/" method="post">
        <input type="text" name="newitem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="listname" value="<%= title %>">+</button>
      </form>

  </div>
</div>

<%- include("footer") -%>
